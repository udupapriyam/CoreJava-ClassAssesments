<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
<!-- related to connection properties -->
<property name="connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
<property name="connection.url">jdbc:oracle:thin:@localhost:1521:orcl</property>
<property name="connection.user">scott</property>
<property name="connection.password">tiger</property>

<!-- related to hibernate properties -->
<property name="hibernate.dialect">org.hibernate.dialect.OracleDialect</property>
<property name="show_sql">true</property><!-- to show sql query in output page -->

<!-- related to mapping -->
<mapping resource="Laptop.hbm.xml"/>
</session-factory>
</hibernate-configuration>